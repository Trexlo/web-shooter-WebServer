<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>My first three.js app</title>
    <style>
        body {
            margin: 0;
        }
    </style>
</head>

<body>
  <div id="container">
    <div id="game"></div>
    <input type="number" name="fps" id="fps">
  </div>
  <div class="no-click" id="overlay">
  
  </div>
  <div class="no-click" id="info-box">
    <div class="no-click" id="status-text"><div class="spinner" id="spinner"></div><span></span></div>
    <button class="menu-button" id="continue-button">Continue</button>
  </div>
  <div class="no-click" id="info">
    <p>W A S D to move</p>
    <p>W: FORWARD</p>
    <p>S: BACKWARD</p>
    <p>A: LEFT</p>
    <p>D: RIGHT</p>
    <p>R: RELOAD</p>
    <p>Press [Number 1 - 5] to upgrade your attributes</p>
  </div>
  <div id="menu">
    <h1>Menu</h1>
    <button class="menu-button" id="resume-button">Resume</button>
    <button class="menu-button" id="pause-button">Pause game</button>

    <button <% if (!isHost) { %>hidden<% } %> <% if (player.guest) {  %> disabled <% } %> class="menu-button" id="save-button"><% if (player.guest) {  %> Log in to save games <% }else{ %> Save game <%}%></button>
 
    <button class="menu-button" id="exit-button">Exit</button>
  </div>
  <div id="hud">

    <div class="hud-element" id="players"></div>   
    <div class="hud-element" id="time-info"></div>
    <div class="hud-element" id="game-info"></div>
    <div class="hud-element" id="fps-counter"></div>
    <div class="hud-element" id="shoot-ping-counter"></div>
    <div class="hud-element" hidden id="packet-ping-counter"></div>
    <div class="hud-element" id="ping-counter"></div>
    <div class="hud-element" id="ammo">
      <div>
        <p hidden id="reloading-text" class="hud-element" >Reloading...</p>
      </div>
      <p class="hud-element" id="ammo-text"></p>
    </div>
    <div class="hud-element" id="upgrades">
      <div class="hud-element">
        <p>Points: <span id="points">0</span></p>
        <p style="margin-top: 20px;">Press [Number] to upgrade</p>
      </div>
      <div class="hud-element upgrade unavailable" id="healthUpgrade">
        <p>[1] Cost:<span class="cost">20</span></p>
        <div class="hud-element upgrade-info">
          <p>HP:<span class="value">1</span></p>
          <img class="hud-element upgrade-image" src="/images/icons/healthUpgrade.png">
        </div>
      </div>
      <div class="hud-element upgrade unavailable" id="speedUpgrade">
        <p>[2] Cost:<span class="cost">20</span></p>
        <div class="hud-element upgrade-info">
          <p>MS:<span class="value">1</span></p>
          <img class="hud-element upgrade-image" src="/images/icons/speedUpgrade.png">
        </div>
      </div>
      <div class="hud-element upgrade unavailable" id="damageUpgrade">
        <p>[3] Cost:<span class="cost">20</span></p>
        <div class="hud-element upgrade-info">
          <p>DMG:<span class="value">1</span></p>
          <img class="hud-element upgrade-image" src="/images/icons/damageUpgrade.png">
        </div>
      </div>
      <div class="hud-element upgrade unavailable" id="firerateUpgrade">
        <p>[4] Cost:<span class="cost">20</span></p>
        <div class="hud-element upgrade-info">
          <p>AS:<span class="value">1</span></p>
          <img class="hud-element upgrade-image" src="/images/icons/firerateUpgrade.png">
        </div>
      </div>
      <div class="hud-element upgrade unavailable" id="magazineUpgrade">
        <p>[5] Cost:<span class="cost">20</span></p>
        <div class="hud-element upgrade-info">
          <p>MAG:<span class="value">1</span></p>
          <img class="hud-element upgrade-image" src="/images/icons/magazineUpgrade.png">
        </div>
      </div>
    </div>
  </div>
  <div hidden id="player-template" class="player-info">
    <img class="player-image">
    <p class="player-name">
    <div class="player-health-box">
        <p class="player-health"></p>
    </div>
  </div>
</body>
<style>
  *{
    margin: 0;
    font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
  }
  .no-click{
    pointer-events: none;
  }
  #game{
    width: fit-content;
    height: fit-content;
    position: absolute;
  }
  #container{
    position: absolute;
    display: flex;
  }
  #player-template{
    display: none;
  }
  #info-box{
    position: absolute;
    width: 50vw;
    height: 100%;
    top: 50%;
    left: 50%;
    z-index: 5; 
    transform: translate(-50%, -50%);
  }
  #status-text{    
    position: absolute;
    top: 40%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 70px;
    font-weight: bold;
    color: white;
    z-index: 5;
    -webkit-text-stroke: 2px black; /* width and color */
  }
  #continue-button{
    display: none;
    position: absolute;
    top: 80%;
    left: 50%;
    transform: translate(-50%, -50%);
    pointer-events: all;
  }
  #menu{
    width: 50vw;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    height: 100vh;
    display: none;
    flex-wrap: wrap;
    flex-direction: row;
    justify-content: center;
    pointer-events: none;
    z-index: 4;
  }
  #menu h1{
    margin-top: 50px;
    width: 90%;
    text-align: center;
  }
  .menu-button{
    pointer-events: all;
    width: 90%;
    height: 75px;
    margin-top: 10px;
    background-color: rgb(202, 202, 202);
    border: 1px solid rgba(255, 255, 255, 0.24);
    box-shadow: rgba(255, 255, 255, 0.24) 0px 0px 4px 4px;
    color: rgb(0, 0, 0);
    vertical-align: middle;
    padding-top: auto;
    text-align: center;
    text-decoration: none;
    font-size: 18px;
  }
  .menu-button:hover{
    background-color: rgb(184, 184, 184);
    cursor: pointer; 
    box-shadow: rgb(255, 255, 255) 0px 0px 10px 4px;
  }
  .menu-button:disabled{
    background-color: rgb(129, 129, 129);
  }
  #overlay{
    position: absolute;
    pointer-events: none;
    width: 100vw;
    height: 100vh;
    background: rgba(0, 0, 0, 0.7);
    z-index: 3;
  }
  #info{
    position: absolute;
    bottom: 100px;
    left: 0;
    color: white;
    font-size: 20px;
    font-weight: bold;
    z-index: 4;
    -webkit-text-stroke: 0.5px black; /* width and color */
  }
  #time-info{
    display: none;
    position: absolute;
    top: 100px;
    width: 100%;
    text-align: center;
    color: white;
    font-size: 25px;
    font-weight: bold;
    z-index: 4;
    -webkit-text-stroke: 0.5px black; /* width and color */
  }
  #game-info{
    position: absolute;
    top: 130px;
    width: 100%;
    text-align: center;
    color: white;
    font-size: 20px;
    font-weight: bold;
    z-index: 4;
    -webkit-text-stroke: 0.5px black; /* width and color */
  }
  #fps-counter{
    position: absolute;
    bottom: 0;
    width: 100%;
    text-align: end;
  }
  #ping-counter{
    position: absolute;
    bottom: 100px;
    width: 100%;
    text-align: end;
  }
  #packet-ping-counter{
    position: absolute;
    bottom: 50px;
    width: 100%;
    text-align: end;
  }  
  #shoot-ping-counter{
    position: absolute;
    bottom: 150px;
    width: 100%;
    text-align: end;
  }
  #hud{
    pointer-events: none;
    position: absolute;
    display: block;
    width: 100vw;
    height: 100vh;
    box-sizing: border-box;
    border: 0;
    z-index: 2;
  }
  #players{
    width: 100%;
    height: 75px;
    display: flex;
    align-items: center;
    flex-flow: row;
    flex-wrap: wrap;

  }
  .player-info{
    display: flex;
    width: 200px;
    height:75px;
    flex-wrap: wrap;
    background: rgba(0, 0, 0, 0.3);
  }
  .player-image{
    width: 50px;
    height: 50px;
  }
  .player-name{
    width: 150px;
    font-size: 20px;
    font-weight: bold;
    color: white;
    -webkit-text-stroke: 1px black; /* width and color */
    margin-top: auto;
    margin-bottom: auto;
    text-overflow: ellipsis;
  }
  .player-health{
    width: 100%;
    height: 25px;
    text-align: center;
    vertical-align: middle;
 /* background-color: rgb(0, 255, 0); */

    background: linear-gradient(90deg, red 20px, rgb(255, 153, 0) 70px, rgb(0, 255, 0) 200px);
    font-size: 20px;
    font-weight: bold;
    color: white;
    -webkit-text-stroke: 1px black; /* width and color */
  }
  .player-health-box{
    width: 100%;
    height: 25px;
    border: 1px solid gray;
  }
  #ammo{
    position: absolute;
    display: grid;
    align-items: center;
    width: 100px;
    height: 100px;
    bottom: 0;
    left: 0;
    grid-template-rows: 30% 70%;
  }
  #ammo-text{
    font-size: 40px;
    font-weight: bold;
    color: white;
    -webkit-text-stroke: 2px black; /* width and color */
    animation-duration: 1s;
    margin-bottom: auto;
  }
  #reloading-text{
    font-size: 20px;
    font-weight: bold;
    color: white;
    -webkit-text-stroke: 1px black; /* width and color */
    animation-name: reload;
    background:  rgb(236, 192, 46);
    margin-top: auto;
  }
  @keyframes reload {
    from {width: 0%;}
    to {width: 100%;}
  }
  #upgrades{
    position: absolute;
    width: 120px;
    right: 0;
    top: 0%;
    display: flex;
    flex-direction: column;
    flex-wrap: wrap;
    font-size: 18px;
    font-weight: bold;
    color: rgba(255, 255, 255, 0.993);
    -webkit-text-stroke: 0.5px black; /* width and color */
  }
  .upgrade-image{
    width: 50px;
    height: 50px;
  }
  .upgrade{
    width: 120px;
    margin-top: 5px;
    display: flex;
    align-items: end;
    flex-direction: column;
  }
  .upgrade p{
    align-self: flex-start;
  }
  .upgrade-info{
    display: flex;
    align-items: end;
    flex-direction: row;
    align-items: center;
  }
  .unavailable{
    filter: contrast(0.5) brightness(0.5)
  }
  .spinner{
    border: 10px inset white;
    border-radius: 30px;
    width: 25px;
    height: 25px;
    top: 20px;
    left: -50px;
    animation: spinning 1s linear infinite;
    position: absolute;
  }

  @keyframes spinning {
    0% {transform: rotate(0deg);}
    100% {transform: rotate(360deg);}
  }
  body{
    overflow: hidden;
  }
</style>
